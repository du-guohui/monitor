.wux-input {
  position: relative;
  display: -ms-flexbox;
  display: flex;
  align-item: center;
  background: #ffffff;
  padding-right: 22rpx;
}

.wux-input__label {
  margin-left: 0;
  margin-right: 10rpx;
  text-align: left;
  white-space: nowrap;
  overflow: hidden;
  width: 160rpx;
  font-size: 13.5px;
  color: #333333;
  font-weight: 400;
  text-indent: 12px;
}

.wux-input__control {
  -ms-flex: 1;
  flex: 1;
}

.wux-input__item {
  width: 100%;
  border: 0;
  outline: 0;
  -webkit-appearance: none;
  background-color: transparent;
  color: inherit;
  height: 80rpx;
  min-height: 80rpx;
  line-height: 50rpx;
  font-size: 27rpx;
  color: #333333;
  text-align: right;
}

.wux-input__extra {
  color: #888;
  margin-left: 10rpx;
}

.wux-input__error {
  margin-left: 10rpx;
}

.wux-input__clear {
  display: none;
}

.wux-input--focus .wux-input__clear {
  display: block;
}

.wux-input--disabled {
  opacity: 0.3;
}

.wux-input--error .wux-input__control {
  color: #ef473a;
}
