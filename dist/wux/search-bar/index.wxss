.wux-search-bar {
  position: relative;
  padding: 0rpx 0rpx;
  display: -ms-flexbox;
  display: flex;
  box-sizing: border-box;
  border-radius: 40rpx;
  overflow: hidden;
}

.wux-search-bar__form {
  position: relative;
  -ms-flex: 1;
  flex: 1;
  width: 100%;
  height: 72rpx;
  background-clip: padding-box;
  background: #eee;
  border-radius: 40rpx;
  overflow: hidden;
}

.wux-search-bar__box {
  position: relative;
  padding-left: 60rpx;
  padding-right: 60rpx;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.wux-search-bar__input {
  padding: 10rpx 10rpx;
  width: 100%;
  height: 72rpx;
  min-height: inherit;
  border: 0;
  font-size: 26rpx;
  line-height: 36rpx;
  box-sizing: border-box;
  border-radius: 6px;
}

.wux-search-bar__label {
  display: -ms-flexbox;
  display: flex;
  -ms-flex-pack: center;
  justify-content: center;
  -ms-flex-align: center;
  align-items: center;
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  left: 0rpx;
  z-index: 2;
  border-radius: 0rpx;
  text-align: center;
  color: grey;
  background: #fff;
}

.wux-search-bar__text {
  display: inline-block;
  font-size: 28rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.wux-search-bar__cancel {
  display: none;
}

.wux-search-bar__icon {
  vertical-align: middle;
}

.wux-search-bar__search {
  position: absolute;
  left: 22rpx;
  top: 26rpx;
}

.wux-search-bar__clear {
  display: none;
  position: absolute;
  top: 24rpx;
  right: 0;
  padding: 0 20rpx;
}

.wux-search-bar--focus .wux-search-bar__clear {
  display: block;
}

.wux-search-bar--disabled {
  opacity: 0.3;
}
